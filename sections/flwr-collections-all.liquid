{% schema %}
{
  "name": "flwr collections all",
  "class": "section-flwr-collections-all",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Footer Block",
      "settings": [
        {
          "type": "text",
          "id": "flwr_footer_block_header",
          "label": "Footer Block Header",
          "default": "Header"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "flwr collections all",
      "category": "CUSTOM",
      "blocks": [
        
      ]
    }
  ]
}
{% endschema %}
<div class="flwr-collections-all-section">
  {%- for link in section.settings.menu.links -%}
    <div>
      {%- if link.links != blank and link.title != 'Home' -%}
        <div id="flwr-collection-all-{{ forloop.index }}">
          <div class="flwr-summary">
            {{ link.title | escape }}
          </div>
          <div id="link-{{ link.title | escape }}">
            <div class="flwr-submenu">
              <div>
                {%- for childlink in link.links -%}
                  <div>
                    {%- if childlink.links == blank -%}
                      <a href="{{ childlink.url }}">
                        {{ childlink.title | escape }}
                      </a>
                    {%- else -%}
                      <div>
                        <div class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                          {{ childlink.title | escape }}
                        </div>
                        <div>                          
                          <div>
                            {%- for grandchildlink in childlink.links -%}
                              <div>
                                <a href="{{ grandchildlink.url }}">
                                  {{ grandchildlink.title | escape }}
                                </a>
                              </div>
                            {%- endfor -%}
                          </div>
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                {%- endfor -%}
              </div>
            </div>
          </div>
        </div>
      {%- else -%}
        <a href="{{ link.url }}" class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"{% if link.current %} aria-current="page"{% endif %}>
          {{ link.title | escape }}
        </a>
      {%- endif -%}
    </div>
  {%- endfor -%}
</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
